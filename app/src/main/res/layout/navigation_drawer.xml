<?xml version="1.0" encoding="utf-8"?>

<com.example.materialdesignnavigationdrawer.customViews.ScrimInsetsFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_navigation_drawer_rootLayout"
    style="@style/ScrimInsetsLayout"
    tools:context="com.example.materialdesignnavigationdrawer.activities.MainActivity"
    tools:layout_marginEnd="?actionBarSize"
    tools:layout_marginRight="?actionBarSize">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/navigation_drawer_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/navigation_drawer_header" />

            <include layout="@layout/navigation_drawer_body" />

        </LinearLayout>

    </ScrollView>

</com.example.materialdesignnavigationdrawer.customViews.ScrimInsetsFrameLayout>